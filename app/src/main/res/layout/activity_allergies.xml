<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_allergies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bcit.Leftovers.activity.Allergies">

    <TextView
        android:text="ANY ALLERGIES?"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="0.09" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_row="0"
                android:layout_column="0">

                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    android:id="@+id/bcircle_border_change_example1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_photo_library_black_24dp"
                    android:layout_margin="10dp"
                    android:onClick="chooseIngredient"
                    app:bootstrapBrand="regular" />

                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    android:id="@+id/bcircle_border_change_example2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_photo_library_black_24dp"
                    android:layout_margin="10dp"
                    android:onClick="chooseIngredient"
                    app:bootstrapBrand="regular"/>

                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    android:id="@+id/bcircle_border_change_example3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_photo_library_black_24dp"
                    android:layout_margin="10dp"
                    android:onClick="chooseIngredient"
                    app:bootstrapBrand="regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_row="1"
                android:layout_column="0">

                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    android:id="@+id/bcircle_border_change_example5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_photo_library_black_24dp"
                    android:layout_margin="10dp"
                    android:onClick="chooseIngredient"
                    app:bootstrapBrand="regular"/>

                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    android:id="@+id/bcircle_border_change_example6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_photo_library_black_24dp"
                    android:layout_margin="10dp"
                    android:onClick="chooseIngredient"
                    app:bootstrapBrand="regular"/>

                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    android:id="@+id/bcircle_border_change_example7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_photo_library_black_24dp"
                    android:layout_margin="10dp"
                    android:onClick="chooseIngredient"
                    app:bootstrapBrand="regular"/>

            </LinearLayout>

        </GridLayout>

    </ScrollView>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find a meal"
        android:layout_gravity="center"
        app:bootstrapBrand="regular"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:onClick="nextStep"
        android:layout_weight="0.23"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
