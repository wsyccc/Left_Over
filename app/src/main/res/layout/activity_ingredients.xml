<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ingredient_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bcit.Leftovers.activity.Find_Meal_Activity">

    <com.bcit.Leftovers.other.PredicateLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ingredient_tags"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No result"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/none_result"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ingredient_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ingredient_tags"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</LinearLayout>